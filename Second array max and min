import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        int[] arr = new int[n];
        for (int i = 0; i < n; i++) {
            arr[i] = scanner.nextInt();
        }

        List<Integer> evenIndexElements = new ArrayList<>();
        List<Integer> oddIndexElements = new ArrayList<>();
        for (int i = 0; i < n; i++) {
            if (i % 2 == 0) {
                evenIndexElements.add(arr[i]);
            } else {
                oddIndexElements.add(arr[i]);
            }
        }

        Collections.sort(evenIndexElements);
        Collections.sort(oddIndexElements); 

        int secondLargestEven = evenIndexElements.size() >= 2 ? 
                evenIndexElements.get(evenIndexElements.size() - 2) : 0;

        int secondSmallestOdd = oddIndexElements.size() >= 2 ? 
                oddIndexElements.get(1) : 0;

        int sum = secondLargestEven + secondSmallestOdd;
        System.out.println("Sum=" + sum);

        scanner.close();
    }
}
